#!/usr/bin/env bash
# This script displays information about each user from /etc/passwd in a specific format using a while loop and IFS.
while IFS=: read -r username _ userid group _ _ home shell; do
  echo "The user $username is part of the $group gang, lives in $home and rides $shell."
  echo "USER ID's place is protected by the passcode $userid, more info about the user here: $userid"
done < /etc/passwd
