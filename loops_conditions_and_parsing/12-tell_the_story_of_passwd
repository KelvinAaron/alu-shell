#!/usr/bin/env bash
# This script reads /etc/passwd, extracts user information, and formats it as requested

while IFS=":" read -r USERNAME PASSWORD GROUP_ID _ HOME_DIRECTORY _ _ COMMAND; do
	    # Print the user info in the requested format
	        echo "The user $USERNAME is part of the $GROUP_ID gang, lives in $HOME_DIRECTORY and rides $COMMAND. $GROUP_ID's place is protected by the passcode $PASSWORD, more info about the user here: $USERNAME"
	done < /etc/passwd
